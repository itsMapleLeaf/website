---
import "@fontsource/fira-sans-condensed/latin-300.css"
import "@fontsource/fira-sans/latin-400.css"
import { Image } from "astro:assets"
import * as SimpleIcons from "simple-icons-astro"
import leaf from "../assets/white-leaf.png"
import { Dots } from "../components/dots.tsx"
import ExternalLink from "../components/external-link.astro"
import { Likes } from "../components/likes.tsx"
import ProjectList from "../components/project-list.astro"
import SocialLink from "../components/social-link.astro"
import { linkStyle } from "../styles/common.ts"

const email = "mapleleafdev@proton.me"
---

<!doctype html>
<html lang="en" class="bg-orange-900 text-orange-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="a website for a nerd who does web coding"
    />
    <link rel="icon" href="/favicon.png" />
    <title>MapleLeaf</title>
    <style>
      ::selection {
        @apply bg-black bg-opacity-50;
      }

      :focus {
        outline: none;
      }

      :focus-visible {
        @apply ring-2 ring-orange-300;
      }
    </style>
  </head>

  <body
    class="grid gap-12 px-4 py-16 text-center sm:px-16 sm:py-12 sm:text-left"
  >
    <main class="flex flex-col items-center space-y-8 sm:items-start">
      <h1 class="mb-1 font-condensed text-6xl">
        <span class="text-5xl opacity-60">hi, i'm</span> MapleLeaf
        <Image
          src={leaf}
          alt=""
          class="relative top-px inline-block h-[1em] w-[1em] align-text-top opacity-50"
        />
      </h1>
      <Likes client:idle />
    </main>

    <section>
      <h2 class="sr-only">projects</h2>
      <ProjectList />
    </section>

    <section class="flex justify-center gap-3 sm:justify-start">
      <h2 class="sr-only">Social links</h2>
      <SocialLink href="https://bsky.app/profile/mapleleaf.dev" title="Bluesky">
        <SimpleIcons.Bluesky />
      </SocialLink>
      <SocialLink href="https://github.com/itsMapleLeaf" title="GitHub">
        <SimpleIcons.Github />
      </SocialLink>
      <SocialLink href="https://twitch.tv/imMapleLeaf" title="Twitch">
        <SimpleIcons.Twitch />
      </SocialLink>
      <SocialLink href="https://soundcloud.com/itsmapleleaf" title="SoundCloud">
        <SimpleIcons.Soundcloud />
      </SocialLink>
    </section>

    <section class="-mt-3 leading-tight">
      <h2 class="sr-only">Contact & source</h2>
      <address class="grid gap-1 not-italic">
        <p>
          <span class="opacity-50">contact:</span>{" "}
          <ExternalLink
            class={linkStyle}
            href={`mailto:${email}`}
            target="_blank"
          >
            {email}
          </ExternalLink>
        </p>
        <p>
          <ExternalLink
            class={linkStyle}
            href="https://github.com/itsMapleLeaf/website"
            target="_blank"
          >
            view website source
          </ExternalLink>
        </p>
      </address>
    </section>

    <Dots client:idle />
  </body>
</html>
