---
import { Dots } from "../dots"
import ExternalLink from "../external-link.astro"
import "../fonts.css"
import { Likes } from "../likes"
import ProjectList from "../projects/project-list.astro"
import "../tailwind.css"
import { linkStyle } from "../ui/styles"
import leaf from "../white-leaf.png"
---

<!DOCTYPE html>
<html lang="en" class="text-orange-100 bg-orange-900">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="a website for a nerd who does web coding"
    />
    <link rel="icon" href="/favicon.png" />
    <title>MapleLeaf</title>

    <!-- prettier-ignore -->
    {import.meta.env.DEV && (
      <script
        defer
        data-website-id="c0a3cab7-5879-42c3-92c6-57b8ba99f130"
        src="https://umami-production-72bc.up.railway.app/umami.js"
      />
    )}
  </head>

  <body
    class="grid gap-12 px-4 py-16 text-center sm:text-left sm:px-16 sm:py-12"
  >
    <main class="flex flex-col items-center space-y-8 sm:items-start">
      <h1 class="mb-1 text-6xl font-condensed">
        <span class="text-5xl opacity-60">hi, i'm</span> MapleLeaf <img
          src={leaf}
          alt=""
          class="inline-block h-[1em] align-text-top relative top-px opacity-50"
        />
      </h1>
      <Likes client:idle />
    </main>

    <section>
      <h2 class="sr-only">projects</h2>
      <ProjectList />
    </section>

    <section class="flex justify-center gap-3 sm:justify-start">
