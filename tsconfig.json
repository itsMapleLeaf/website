{
  "extends": "@itsmapleleaf/configs/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["vite/client"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.cjs",
    "**/*.mjs",
    ".eslintrc.cjs"
  ],
  "exclude": ["**/node_modules/**", "**/build/**", "**/dist/**", "**/.cache/**"]
}
